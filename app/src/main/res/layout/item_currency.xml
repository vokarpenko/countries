<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <TextView
        android:layout_margin="2dp"
        android:id="@+id/label_name_currency"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Название"
        app:layout_constraintEnd_toStartOf="@+id/currency_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_margin="2dp"
        app:layout_constraintStart_toEndOf="@id/label_name_currency"
        app:layout_constraintTop_toTopOf="parent"
        android:text="currency_name"
        android:id="@+id/currency_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="2dp"
        android:id="@+id/label_code_currency"
        app:layout_constraintStart_toEndOf="@id/currency_name"
        android:text="Код"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:layout_margin="2dp"
        app:layout_constraintStart_toEndOf="@id/label_code_currency"
        android:text="currency_code"
        android:id="@+id/currency_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="2dp"
        android:id="@+id/label_symbol_currency"
        android:text="Символ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="2dp"
        app:layout_constraintStart_toEndOf="@id/label_symbol_currency"
        android:text="currency_symbol"
        android:id="@+id/currency_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>